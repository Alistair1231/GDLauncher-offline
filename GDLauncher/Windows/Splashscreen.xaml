<Window x:Class="GDLauncher.Windows.Splashscreen"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:GDLauncher.Windows"
        xmlns:gif="http://wpfanimatedgif.codeplex.com"
        mc:Ignorable="d"
        Title="Splashscreen" Width="400" Height="400" AllowsTransparency="True" WindowStyle="None" Background="#00005555" Topmost="True" ResizeMode="NoResize" WindowStartupLocation="CenterScreen" Loaded="Window_Loaded">
    <StackPanel>

        <Image gif:ImageBehavior.AnimatedSource="../Assets/spinner.gif" Width="300" gif:ImageBehavior.RepeatBehavior="Forever"/>
        <Label FontSize="35" Foreground="White" HorizontalAlignment="Center">Loading GDLauncher...</Label>

    </StackPanel>
</Window>
