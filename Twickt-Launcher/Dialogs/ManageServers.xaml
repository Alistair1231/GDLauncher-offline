<UserControl x:Class="GDLauncher.Dialogs.ManageServers"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:GDLauncher.Dialogs"
             mc:Ignorable="d" 
             Height="450" Width="400" Background="White">
    <Grid>
        <StackPanel>
            <Label FontSize="25" HorizontalAlignment="Center" Margin="0 20 0 20">Manage Servers</Label>
            <materialDesign:Card HorizontalAlignment="Center" Width="300" Height="250" Padding="20">
                <ListView Width="220">
                    <ListViewItem MouseLeftButtonUp="ListViewItem_MouseLeftButtonUp">
                        Server 1
                    </ListViewItem>
                </ListView>
            </materialDesign:Card>
        </StackPanel>
        <Button Foreground="White" Width="130" Command="materialDesign:DialogHost.CloseDialogCommand" Margin="10,407,260,9.6">Back</Button>
    </Grid>
</UserControl>
