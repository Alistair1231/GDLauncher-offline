<Page x:Class="Twickt_Launcher.Pages.Home"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
      xmlns:local="clr-namespace:Twickt_Launcher.Pages"
      mc:Ignorable="d" 
      FontFamily="pack://application:,,,/MaterialDesignThemes.Wpf;component/Resources/Roboto/#Roboto"
      d:DesignHeight="625" d:DesignWidth="694" WindowHeight="625" WindowWidth="694"
      Title="Home" ShowsNavigationUI="False" Background="White" Loaded="Page_Loaded">

    <Grid>
        <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
            <materialDesign:Card Margin="10" Height="100" Width="300">
                <Image x:Name="image" HorizontalAlignment="Center" Height="46" VerticalAlignment="Center" Width="230" Source="/Twickt Launcher;component/Images/Twickt Logo 200x41px v2.png" Stretch="UniformToFill"/>
            </materialDesign:Card>
            <materialDesign:Card Margin="10" Height="100" Width="300">
                <Label x:Name="label" Content="The Simpler, The Better!" HorizontalAlignment="Left" VerticalAlignment="Center" FontSize="22"/>
            </materialDesign:Card>
        </StackPanel>


        <ScrollViewer Width="674" Margin="10,123,10,192" Visibility="Hidden">
            <TextBlock x:Name="changelogs" HorizontalAlignment="Left" TextWrapping="Wrap" Text="TextBlock" VerticalAlignment="Top" Background="#BBDEFB" Padding="10"/>
        </ScrollViewer>
        <Button x:Name="button" Content="Modpacks" Foreground="White" HorizontalAlignment="Left" materialDesign:ShadowAssist.ShadowDepth="Depth2" Margin="10,462,0,0" VerticalAlignment="Top" Width="674" Height="46" Click="button_Click"/>
        <WrapPanel Margin="20,147,10,168" Orientation="Horizontal" HorizontalAlignment="Center" Width="664">
            <materialDesign:Card Width="400" Margin="83 10 10 10" Height="289">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="140" />
                        <RowDefinition Height="*" />
                        <RowDefinition Height="Auto" />
                    </Grid.RowDefinitions>
                    <materialDesign:PackIcon Kind="InformationOutline"  Width="150" Height="150" HorizontalAlignment="Center" Foreground="#BBDEFB"/>
                    <Button Name="modpack2start" Grid.Row="0" IsEnabled="True" Style="{StaticResource MaterialDesignFloatingActionMiniAccentButton}" 
            			HorizontalAlignment="Right" VerticalAlignment="Bottom"
            			Margin="0 0 16 -20" Click="modpack2start_Click" Loaded="modpack2start_Loaded">
                        <materialDesign:PackIcon Kind="Account" />
                    </Button>
                    <StackPanel Grid.Row="1" Margin="8 24 8 0" >
                        <TextBlock FontWeight="Bold"><Run Text="Some info"/></TextBlock>
                        <TextBlock Name="totalUsers" TextWrapping="Wrap" VerticalAlignment="Center"></TextBlock>
                        <TextBlock Name="lastRegistered" TextWrapping="Wrap" VerticalAlignment="Center"></TextBlock>
                        <Button Width="100" HorizontalAlignment="Center" materialDesign:ShadowAssist.ShadowDepth="Depth2" Style="{StaticResource MaterialDesignFlatButton}" Click="Button_Click_1">
                            <materialDesign:PackIcon Kind="Autorenew" Width="33" Height="22" Foreground="#2962FF"/>
                        </Button>
                        <Label Name="statisticsupdatedlabel" FontSize="10" HorizontalAlignment="Center" Foreground="Green" Visibility="Hidden">Updated</Label>
                    </StackPanel>
                </Grid>
            </materialDesign:Card>
        </WrapPanel>
        <StackPanel Orientation="Horizontal">
            <Button x:Name="changelog" Content="Changelogs" Foreground="White" materialDesign:ShadowAssist.ShadowDepth="Depth2" Margin="155,121,0,0" VerticalAlignment="Top" Width="180" Height="39" Click="changelog_Click"/>
            <Button x:Name="problems" Content="Problems?" Foreground="White" materialDesign:ShadowAssist.ShadowDepth="Depth2" Margin="20,121,0,0" VerticalAlignment="Top" Width="180" Height="39" Click="problems_Click"/>
        </StackPanel>
        <StackPanel>
                <StackPanel Orientation="Horizontal" Margin="0,525,0,0" HorizontalAlignment="Center">
                <materialDesign:Card Margin="10 0 5 0" Cursor="Hand" MouseDown="twitterLink_MouseDown">
                    <Image x:Name="twitterLink" Margin="20" HorizontalAlignment="Center" VerticalAlignment="Center" Height="55" Width="55" Source="/Twickt Launcher;component/Images/Icons/twitter.png"/>
                </materialDesign:Card>
                <materialDesign:Card Margin="10 0 5 0"  Cursor="Hand" MouseDown="facebookLink_MouseDown">
                    <Image x:Name="facebookLink" Margin="20" HorizontalAlignment="Center" VerticalAlignment="Center" Height="55" Width="55" Source="/Twickt Launcher;component/Images/Icons/facebook.png"/>
                </materialDesign:Card>
                <materialDesign:Card Margin="10 0 5 0"  Cursor="Hand" MouseDown="emailLink_MouseDown">
                    <Image x:Name="emailLink" Margin="20" HorizontalAlignment="Center" VerticalAlignment="Center" Height="55" Width="55" Source="/Twickt Launcher;component/Images/Icons/gmail.png"/>
                </materialDesign:Card>
                <materialDesign:Card Margin="10 0 5 0"  Cursor="Hand" MouseDown="websiteLink_MouseDown">
                    <Image x:Name="websiteLink" Margin="20" HorizontalAlignment="Center" VerticalAlignment="Center" Height="55" Width="55" Source="/Twickt Launcher;component/Images/Icons/website.png"/>
                </materialDesign:Card>
            </StackPanel>
        </StackPanel>
    </Grid>
</Page>
