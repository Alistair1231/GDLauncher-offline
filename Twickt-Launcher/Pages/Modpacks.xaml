<Page x:Class="Twickt_Launcher.Pages.Modpacks"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
      xmlns:local="clr-namespace:Twickt_Launcher.Pages"
      mc:Ignorable="d" 
      FontFamily="pack://application:,,,/MaterialDesignThemes.Wpf;component/Resources/Roboto/#Roboto"
      d:DesignHeight="625" d:DesignWidth="694" WindowHeight="625" WindowWidth="694" Background="#FFFFFF"
      Title="Modpacks" Loaded="Page_Loaded">

    <Grid>
        <Label x:Name="remoteModpacksLabel" Content="Remote Modpacks" HorizontalAlignment="Left" Margin="10,54,0,0" VerticalAlignment="Top" Width="167" FontSize="18.667"/>
        <ListBox x:Name="remoteModpacks" HorizontalAlignment="Left" Height="270" Margin="10,94,0,0" VerticalAlignment="Top" Width="167" materialDesign:ShadowAssist.ShadowDepth="Depth2" SelectionChanged="remoteModpacks_SelectionChanged"/>
        <Label x:Name="localModpacksLabel" Content="Local Modpacks" HorizontalAlignment="Left" Margin="517,54,0,0" VerticalAlignment="Top" Width="167" FontSize="18.667"/>
        <ListBox x:Name="localModpacks" HorizontalAlignment="Left" Height="270" Margin="517,94,0,0" VerticalAlignment="Top" Width="167"/>
        <Button x:Name="start" Content="Start" HorizontalAlignment="Left" Foreground="White" Margin="227,544,0,0" VerticalAlignment="Top" Width="220" Height="71" FontSize="26.667" Click="start_Click" materialDesign:ShadowAssist.ShadowDepth="Depth2"/>
        <TextBox x:Name="remoteModpacksSearch" HorizontalAlignment="Left" Height="39" Margin="10,10,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="167" materialDesign:HintAssist.Hint="Search" Style="{DynamicResource MaterialDesignFloatingHintTextBox}" TextChanged="textBox_TextChanged"/>
        <TextBox x:Name="localModpacksSearch" HorizontalAlignment="Left" Height="39" Margin="517,10,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="167" materialDesign:HintAssist.Hint="Search" Style="{DynamicResource MaterialDesignFloatingHintTextBox}"/>
        <Button x:Name="addLocalModpack" HorizontalAlignment="Left" Margin="517,369,0,0" Foreground="White" VerticalAlignment="Top" Width="50" Click="addLocalModpack_Click" materialDesign:ShadowAssist.ShadowDepth="Depth2">
            <materialDesign:PackIcon Kind="Plus" />
        </Button>
        <Button x:Name="editLocalModpack" HorizontalAlignment="Left" Margin="572,369,0,0" Foreground="White" VerticalAlignment="Top" Width="50" Click="editLocalModpack_Click" materialDesign:ShadowAssist.ShadowDepth="Depth2">
            <materialDesign:PackIcon Kind="Pencil" />
        </Button>
        <Button x:Name="deleteLocalModpack" HorizontalAlignment="Left" Margin="627,369,0,0" Foreground="White" VerticalAlignment="Top" Width="50" materialDesign:ShadowAssist.ShadowDepth="Depth2">
            <materialDesign:PackIcon Kind="Delete" />
        </Button>
        <Button x:Name="refreshRemoteModpacks" HorizontalAlignment="Left" Margin="10,368,0,0" Foreground="White" VerticalAlignment="Top" Width="167" materialDesign:ShadowAssist.ShadowDepth="Depth2" Click="refreshRemoteModpacks_Click">
            <materialDesign:PackIcon Kind="Autorenew" Width="33" Height="22" />
        </Button>
        <materialDesign:Card materialDesign:ShadowAssist.ShadowDepth="Depth2" Padding="32" FontSize="16" Margin="96,47,104,0" Height="273">
            <TextBlock x:Name="description" TextWrapping="Wrap"></TextBlock>
        </materialDesign:Card>
    </Grid>
</Page>
