<Page x:Class="Twickt_Launcher.Pages.Modpacks"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
      xmlns:local="clr-namespace:Twickt_Launcher.Pages"
      mc:Ignorable="d" 
      FontFamily="pack://application:,,,/MaterialDesignThemes.Wpf;component/Resources/Roboto/#Roboto" Height="625" Width="694" Background="#FFFFFF"
      Title="Modpacks" Loaded="Page_Loaded">

    <Grid>
        <StackPanel Orientation="Horizontal">
            <StackPanel Orientation="Vertical" HorizontalAlignment="Left">
                <StackPanel Orientation="Horizontal" Width="200">
                    <TextBox x:Name="remoteModpacksSearch" Height="39" Width="120" Margin="20 20 10 20" TextWrapping="Wrap" Text="" materialDesign:HintAssist.Hint="Search" Style="{DynamicResource MaterialDesignFloatingHintTextBox}" TextChanged="textBox_TextChanged"/>
                    <Button Name="filter" Click="filter_Click" Style="{StaticResource MaterialDesignFlatButton}">
                        <materialDesign:PackIcon Kind="Filter" VerticalAlignment="Center"/>
                    </Button>
                </StackPanel>
                <ListBox Name="modpackstypeselection" SelectionMode="Single" Style="{StaticResource MaterialDesignToolToggleListBox}" SelectedIndex="0" HorizontalAlignment="Center" SelectionChanged="modpackstypeselection_SelectionChanged">
                    <ListBoxItem Name="remote" Width="80" HorizontalContentAlignment="Center">Remote</ListBoxItem>
                    <ListBoxItem Name="local" Width="80" HorizontalContentAlignment="Center">Locali</ListBoxItem>
                </ListBox>
                <Label x:Name="remoteModpacksLabel" Content="Modpackslist" Margin="0" Width="167" FontSize="18.667"/>
                <ListBox x:Name="ModpacksLRList" Height="300" Margin="0" Width="167" materialDesign:ShadowAssist.ShadowDepth="Depth2" SelectionChanged="ModpacksLRList_SelectionChanged">
                    <ListBox.ItemTemplate>
                        <DataTemplate>
                            <TextBlock Text="{Binding}">
                                <TextBlock.ContextMenu>
                                    <ContextMenu>
                                        <MenuItem x:Name="delete" Header="Uninstall Modpack"/>
                                        <MenuItem x:Name="mods" Header="Mods"/>
                                        <MenuItem Header="Not Yet Implemented" IsEnabled="False"/>
                                    </ContextMenu>
                                </TextBlock.ContextMenu>
                            </TextBlock>
                        </DataTemplate>
                    </ListBox.ItemTemplate>
                </ListBox>

                <Button x:Name="refreshRemoteModpacks" Margin="0 20 0 0" Foreground="White" Width="167" materialDesign:ShadowAssist.ShadowDepth="Depth2" Click="refreshRemoteModpacks_Click">
                    <materialDesign:PackIcon Kind="Autorenew" Width="33" Height="22" />
                </Button>

                <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Margin="0 5 ">
                    <Button x:Name="addLocalModpack" Width="80" Margin="0 1 3 1" Foreground="White" Click="addLocalModpack_Click" materialDesign:ShadowAssist.ShadowDepth="Depth2">
                        <materialDesign:PackIcon Kind="Plus" />
                    </Button>
                    <Button x:Name="deleteLocalModpack" Margin="3 1 0 1" Width="80" Foreground="White" materialDesign:ShadowAssist.ShadowDepth="Depth2" Click="deleteLocalModpack_Click">
                        <materialDesign:PackIcon Kind="Delete" />
                    </Button>
                </StackPanel>

                <Button x:Name="start" Content="Start" Foreground="White" Width="167" Height="71" FontSize="26.667" Click="start_Click" materialDesign:ShadowAssist.ShadowDepth="Depth2"/>
            </StackPanel>
            <StackPanel Orientation="Vertical" HorizontalAlignment="Right" Width="485">
                <materialDesign:Card Margin="10" Height="600">
                    <StackPanel>
                        <materialDesign:Card materialDesign:ShadowAssist.ShadowDepth="Depth2" Padding="10" FontSize="16" Margin="20" Height="350">
                            <TextBlock x:Name="description" TextWrapping="Wrap"></TextBlock>
                        </materialDesign:Card>
                        <materialDesign:Card materialDesign:ShadowAssist.ShadowDepth="Depth2" Padding="10" FontSize="16" Margin="20 0 20 0" Height="150">
                            <Label Name="isinstalled">Installed</Label>
                        </materialDesign:Card>
                    </StackPanel>
                </materialDesign:Card>
            </StackPanel>
        </StackPanel>
    </Grid>
</Page>
